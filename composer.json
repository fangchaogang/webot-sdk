{
    "name": "fangchaogang/webot-sdk",
    "description": "WECHAT ROBOT SDK",
    "license": "proprietary",
    "authors": [
      {
        "name": "fangchaogang",
        "homepage": "https://github.com/fangchaogang"
      }
    ],
    "require": {
      "php": "7.*",
      "ext-curl": "*",
      "ext-json": "*",
      "guzzlehttp/guzzle": "~6.0",
      "monolog/monolog": "^2.8",
      "symfony/event-dispatcher": "^5.4",
      "pimple/pimple": "^3.5"
    },
    "require-dev": {
      "phpunit/phpunit": "6.*"
    },
    "autoload":{
      "psr-4":{
        "Webot\\": "src"
      }
    },
    "autoload-dev": {
      "psr-4": { "Webot\\Tests\\" : "tests/" }
    },

    "repositories": {
      "packagist": {
        "type": "composer",
        "url": "https://mirrors.aliyun.com/composer/"
      }
    }
}
